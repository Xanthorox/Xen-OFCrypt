<UserControl x:Class="XanthoroxCrypted.Views.InbuiltView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="24,16">
            <!-- Header -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                <TextBlock Text="ðŸ”’" FontSize="18" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBlock Text="INBUILT PROTECTIONS" FontSize="18" FontWeight="Bold" Foreground="{StaticResource Brush_TextPrimary}" VerticalAlignment="Center"/>
            </StackPanel>
            <TextBlock Text="Always-on layers hardcoded into the stub. Cannot be disabled." Foreground="{StaticResource Brush_TextSecondary}" FontSize="11" Margin="0,0,0,20"/>

            <!-- Card Grid -->
            <UniformGrid Columns="2" Margin="0,0,0,0">

                <!-- API Resolution -->
                <Border Style="{StaticResource Style_Card}" Margin="0,0,6,10">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="âœ…" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Dynamic API Resolution" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource Brush_Cyan}"/>
                        </StackPanel>
                        <TextBlock TextWrapping="Wrap" Foreground="{StaticResource Brush_TextSecondary}" FontSize="11" Text="All sensitive WinAPI calls resolved at runtime via PEB walking and DJB2 hash matching. Zero suspicious imports in the IAT."/>
                    </StackPanel>
                </Border>

                <!-- Indirect Syscalls -->
                <Border Style="{StaticResource Style_Card}" Margin="6,0,0,10">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="âœ…" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Ntdll Unhooking" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource Brush_Cyan}"/>
                        </StackPanel>
                        <TextBlock TextWrapping="Wrap" Foreground="{StaticResource Brush_TextSecondary}" FontSize="11" Text="Remaps a clean copy of ntdll.dll from disk, overwriting any EDR/AV userland hooks before sensitive operations."/>
                    </StackPanel>
                </Border>

                <!-- Stack Strings -->
                <Border Style="{StaticResource Style_Card}" Margin="0,0,6,10">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="âœ…" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Stack String Construction" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource Brush_Cyan}"/>
                        </StackPanel>
                        <TextBlock TextWrapping="Wrap" Foreground="{StaticResource Brush_TextSecondary}" FontSize="11" Text="All sensitive strings (DLL names, API names) built character-by-character on the stack. Zero static strings in the binary."/>
                    </StackPanel>
                </Border>

                <!-- PE Mutation -->
                <Border Style="{StaticResource Style_Card}" Margin="6,0,0,10">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="âœ…" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="PE Mutation Engine" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource Brush_Cyan}"/>
                        </StackPanel>
                        <TextBlock TextWrapping="Wrap" Foreground="{StaticResource Brush_TextSecondary}" FontSize="11" Text="Every build gets randomized timestamps, stripped Rich header, renamed sections, nullified checksum, and stripped debug directory."/>
                    </StackPanel>
                </Border>

                <!-- Junk Code -->
                <Border Style="{StaticResource Style_Card}" Margin="0,0,6,10">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="âœ…" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Junk Code Polymorphism" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource Brush_Cyan}"/>
                        </StackPanel>
                        <TextBlock TextWrapping="Wrap" Foreground="{StaticResource Brush_TextSecondary}" FontSize="11" Text="NOP/INT3 padding replaced with random valid x86-64 instructions (XCHG, MOV, PUSH/POP, CMP, TEST). Unique code signature every build."/>
                    </StackPanel>
                </Border>

                <!-- IAT Minimization -->
                <Border Style="{StaticResource Style_Card}" Margin="6,0,0,10">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="âœ…" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Import Table Minimization" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource Brush_Cyan}"/>
                        </StackPanel>
                        <TextBlock TextWrapping="Wrap" Foreground="{StaticResource Brush_TextSecondary}" FontSize="11" Text="IAT stripped to minimal benign kernel32 imports only. All other APIs resolved dynamically at runtime."/>
                    </StackPanel>
                </Border>

                <!-- No Admin Required -->
                <Border Style="{StaticResource Style_Card}" Margin="0,0,6,10">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="âœ…" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Non-Elevated Execution" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource Brush_Green}"/>
                        </StackPanel>
                        <TextBlock TextWrapping="Wrap" Foreground="{StaticResource Brush_TextSecondary}" FontSize="11" Text="Entire stub runs without administrator privileges. Persistence uses HKCU, all memory operations target own process. No UAC prompts."/>
                    </StackPanel>
                </Border>

                <!-- Anti-Tamper -->
                <Border Style="{StaticResource Style_Card}" Margin="6,0,0,10">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="âœ…" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Anti-Tamper Integrity" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource Brush_Green}"/>
                        </StackPanel>
                        <TextBlock TextWrapping="Wrap" Foreground="{StaticResource Brush_TextSecondary}" FontSize="11" Text="Stub verifies its own integrity at startup. Any modification to the binary causes silent exit â€” prevents patching and static analysis."/>
                    </StackPanel>
                </Border>

            </UniformGrid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
